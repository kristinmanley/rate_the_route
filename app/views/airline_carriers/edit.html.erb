<!-- Validation failure messages -->
<% if @airline_carrier.errors.any? %>
  <% @airline_carrier.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Airline Carrier #<%= @airline_carrier.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_airline_carrier/<%= @airline_carrier.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <button class="btn btn-warning">
        Update Airline Carrier
      </button>
      or
      <a href="/airline_carriers/<%= @airline_carrier.id %>">Cancel</a>
    </form>
  </div>
</div>
