<div class="page-header">
  <h1>
    Flight routes
    <a href="/flight_routes/new" class="btn btn-lg btn-success">New Flight route</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Route</th>
        <th>Airline</th>
        <th>Actions</th>
      </tr>

      <% @flight_routes.each do |flight_route| %>
      <tr>
        <td>
          <% if flight_route.route.present? %>
            <a href="/routes/<%= flight_route.route.id %>">
              <%= flight_route.route.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if flight_route.airline.present? %>
            <a href="/airline_carriers/<%= flight_route.airline.id %>">
              <%= flight_route.airline.airline_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/flight_routes/<%= flight_route.id %>" class="btn btn-primary">Show</a>
          <a href="/flight_routes/<%= flight_route.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_flight_route/<%= flight_route.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @flight_routes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
