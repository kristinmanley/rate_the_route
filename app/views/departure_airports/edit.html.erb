<!-- Validation failure messages -->
<% if @departure_airport.errors.any? %>
  <% @departure_airport.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Departure Airport #<%= @departure_airport.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_departure_airport/<%= @departure_airport.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <button class="btn btn-warning">
        Update Departure Airport
      </button>
      or
      <a href="/departure_airports/<%= @departure_airport.id %>">Cancel</a>
    </form>
  </div>
</div>
