<div class="page-header">
  <h1>
    Destination airports
    <a href="/destination_airports/new" class="btn btn-lg btn-success">New Destination airport</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Airport name</th>
        <th>Destination city</th>
        <th>Actions</th>
      </tr>

      <% @destination_airports.each do |destination_airport| %>
      <tr>
        <td><%= destination_airport.airport_name %></td>
        <td><%= destination_airport.destination_city %></td>
        <td>
          <a href="/destination_airports/<%= destination_airport.id %>" class="btn btn-primary">Show</a>
          <a href="/destination_airports/<%= destination_airport.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_destination_airport/<%= destination_airport.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @destination_airports, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
