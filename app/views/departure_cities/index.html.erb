<div class="page-header">
  <h1>
    Departure cities
    <a href="/departure_cities/new" class="btn btn-lg btn-success">New Departure city</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Actions</th>
      </tr>

      <% @departure_cities.each do |departure_city| %>
      <tr>
        <td>
          <a href="/departure_cities/<%= departure_city.id %>" class="btn btn-primary">Show</a>
          <a href="/departure_cities/<%= departure_city.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_departure_city/<%= departure_city.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @departure_cities, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
