<div class="page-header">
  <h1>
    Flights
    <a href="/flights/new" class="btn btn-lg btn-success">New Flight</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Destination city</th>
        <th>Departure city</th>
        <th>Destination airport</th>
        <th>Departure airport</th>
        <th>Airline</th>
        <th>Actions</th>
      </tr>

      <% @flights.each do |flight| %>
      <tr>
        <td>
          <% if flight.destination_city.present? %>
            <a href="/destination_cities/<%= flight.destination_city.id %>">
              <%= flight.destination_city.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if flight.departure_city.present? %>
            <a href="/departure_cities/<%= flight.departure_city.id %>">
              <%= flight.departure_city.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if flight.destination_airport.present? %>
            <a href="/destination_airports/<%= flight.destination_airport.id %>">
              <%= flight.destination_airport.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if flight.departure_airport.present? %>
            <a href="/departure_airports/<%= flight.departure_airport.id %>">
              <%= flight.departure_airport.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if flight.airline.present? %>
            <a href="/airline_carriers/<%= flight.airline.id %>">
              <%= flight.airline.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/flights/<%= flight.id %>" class="btn btn-primary">Show</a>
          <a href="/flights/<%= flight.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_flight/<%= flight.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @flights, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
